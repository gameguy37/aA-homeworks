<h2>Sign In</h2>
<br><br>

<form action="<%= session_url %>" method="POST">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="email">Email</label>
        <input
            type="text"
            name="user[email]"
            id="email"
            value="">

    <label for="password">Password</label>
        <input
            type="password"
            name="user[password]"
            id="password"
            value="">

    <input
        type="submit"
        value="Log In">
</form>